{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sentinel Event Schema",
  "description": "JSON Schema for events on Redis Streams / Kafka topics. Mirrors sentinel-core/src/events.rs.",
  "type": "object",
  "required": ["id", "tenant_id", "timestamp", "source", "payload"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "tenant_id": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "enum": ["discover", "defend", "govern", "observe", "api"]
    },
    "payload": {
      "type": "object",
      "required": ["event_type"],
      "properties": {
        "event_type": {
          "type": "string",
          "enum": [
            "NodeDiscovered",
            "NodeUpdated",
            "NodeStale",
            "EdgeDiscovered",
            "VulnerabilityFound",
            "ScanStarted",
            "ScanCompleted",
            "AttackPathComputed",
            "HuntFinding",
            "ShadowAiDiscovered",
            "PolicyViolation",
            "EngramRecorded"
          ]
        }
      }
    }
  }
}
